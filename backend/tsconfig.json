{
  "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "../", // Update the rootDir to point to the 'backend' directory
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}